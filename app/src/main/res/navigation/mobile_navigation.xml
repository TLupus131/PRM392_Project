<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.bookingapp.activity.ui.home.HomeFragment"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_bookmark"
        android:name="com.example.bookingapp.activity.ui.bookmark.BookmarkFragment"
        tools:layout="@layout/fragment_bookmark" />

    <fragment
        android:id="@+id/navigation_reservation"
        android:name="com.example.bookingapp.activity.ui.reservation.ReservationFragment"
        tools:layout="@layout/fragment_reservation" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.bookingapp.activity.ui.setting.SettingsFragment"
        tools:layout="@layout/fragment_settings" />
</navigation>